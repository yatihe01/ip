<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<fx:root alignment="TOP_RIGHT"
         spacing="12"
         maxHeight="1.7976931348623157E308"
         maxWidth="1.7976931348623157E308"
         prefWidth="400.0"
         type="javafx.scene.layout.HBox"
         xmlns="http://javafx.com/javafx/17"
         xmlns:fx="http://javafx.com/fxml/1">

    <children>
        <Label fx:id="dialog"
               text="Label"
               wrapText="true"
               minHeight="-Infinity"
               maxWidth="250.0"
               style="-fx-background-radius: 20;
                      -fx-border-radius: 20;
                      -fx-border-width: 2;
                      -fx-padding: 10 15 10 15;
                      -fx-text-fill: #000000;
                      -fx-font-size: 14px;
                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0.3, 0, 2);" />

        <ImageView fx:id="displayPicture"
                   fitHeight="80.0"
                   fitWidth="80.0"
                   pickOnBounds="true"
                   preserveRatio="true"
                   style="-fx-border-radius: 40;
                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 4, 0.3, 0, 2);" />
    </children>

    <padding>
        <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
    </padding>
</fx:root>